MainActivity.java
 package com.example.myapplication;

package com.example.myapplication;

import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.CheckBox;
import android.widget.EditText;
import android.widget.RadioButton;
import android.widget.RadioGroup;
import android.widget.Toast;
import androidx.appcompat.app.AppCompatActivity;

public class MainActivity extends AppCompatActivity {

    private EditText editTextStudentDetails, editTextName;
    private RadioGroup radioGroupGender;
    private CheckBox checkBoxMaths, checkBoxScience, checkBoxEnglish;
    private Button buttonSubmit;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        // Initialize views
        editTextStudentDetails = findViewById(R.id.editTextStudentDetails);
        editTextName = findViewById(R.id.editTextName);
        radioGroupGender = findViewById(R.id.radioGroupGender);
        checkBoxMaths = findViewById(R.id.checkBoxMaths);
        checkBoxScience = findViewById(R.id.checkBoxScience);
        checkBoxEnglish = findViewById(R.id.checkBoxEnglish);
        buttonSubmit = findViewById(R.id.buttonSubmit);

        // Set onClick listener for the submit button
        buttonSubmit.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                // Get values from views
                String studentDetails = editTextStudentDetails.getText().toString();
                String name = editTextName.getText().toString();
                String gender = getSelectedGender();
                String subjects = getSelectedSubjects();

                // Display registration details
                String message = "Student Details: " + studentDetails + "\n" +
                        "Name: " + name + "\n" +
                        "Gender: " + gender + "\n" +
                        "Subjects: " + subjects;
                Toast.makeText(MainActivity.this, message, Toast.LENGTH_SHORT).show();
            }
        });
    }

    // Helper method to get the selected gender
    private String getSelectedGender() {
        int selectedId = radioGroupGender.getCheckedRadioButtonId();
        RadioButton radioButton = findViewById(selectedId);
        return radioButton != null ? radioButton.getText().toString() : "";
    }

    // Helper method to get the selected subjects
    private String getSelectedSubjects() {
        StringBuilder subjects = new StringBuilder();
        if (checkBoxMaths.isChecked()) {
            subjects.append("Maths, ");
        }
        if (checkBoxScience.isChecked()) {
            subjects.append("Science, ");
        }
        if (checkBoxEnglish.isChecked()) {
            subjects.append("English");
        }
        return subjects.toString();
    }
}
